# ============================================================================
# CONFIGURAÇÃO DE AMBIENTE PARA TESTES E2E - WMS Med@x
# Copiar para .env.e2e e preencher valores
# ============================================================================

# URL base da aplicação
E2E_BASE_URL=http://localhost:3000
BASE_URL=http://localhost:3000

# Banco de dados de testes (separado do desenvolvimento)
# IMPORTANTE: Use um banco diferente para evitar perda de dados
E2E_DATABASE_URL=mysql://root:password@localhost:3307/wms_medax_e2e

# Credenciais de usuário de teste do Portal do Cliente
E2E_TEST_USER_LOGIN=e2e.test
E2E_TEST_USER_PASSWORD=senha123
E2E_TEST_USER_EMAIL=e2e@test.com
TEST_USER_EMAIL=e2e@test.com
TEST_USER_PASSWORD=senha123

# Tenant de teste
E2E_TEST_TENANT_NAME=Cliente E2E Teste
E2E_TEST_TENANT_CNPJ=00000000000191

# Token de sessão de teste (alternativa ao login via UI)
# Útil para bypass de OAuth em ambiente de teste
TEST_SESSION_TOKEN=

# Configurações de timeout (em milissegundos)
E2E_TIMEOUT_NAVIGATION=30000
E2E_TIMEOUT_ACTION=10000

# Flags de feature (para testes de funcionalidades futuras)
E2E_FEATURE_EXPORT_ENABLED=false
E2E_FEATURE_NOTIFICATIONS_ENABLED=false

# Configuração de screenshots e vídeos
E2E_SCREENSHOT_ON_FAILURE=true
E2E_VIDEO_ON_FAILURE=true
E2E_TRACE_ON_FAILURE=true

# Configuração de paralelização
E2E_WORKERS=2
E2E_RETRIES=1

# Ambiente de execução
E2E_ENVIRONMENT=local # local | ci | staging | production
